<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define a transparent background -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the stroke (border) properties -->
    <stroke
        android:width="2dp"
        android:color="@color/cool_blue" /> <!-- Replace with your desired color -->

    <!-- Add corner radius for rounded corners -->
    <corners android:radius="5dp" /> <!-- Adjust the radius value as needed -->

</shape>
