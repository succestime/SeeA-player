<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define a transparent background -->
    <solid android:color="#CDDEFB" />

    <!-- Define the stroke (border) properties -->
    <stroke
        android:width="1dp"
        android:color="@color/cool_blue" /> <!-- Replace with your desired color -->
    <corners android:topLeftRadius="5dp"
        android:bottomLeftRadius="5dp" />
    <!-- Optional: Add corner radius if you want rounded corners -->
</shape>
