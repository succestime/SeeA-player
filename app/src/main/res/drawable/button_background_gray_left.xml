<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or fill (optional) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/> <!-- Change to your desired background color -->
        </shape>
    </item>

    <!-- Stroke on the left side, top, and bottom with rounded corners -->
    <item android:top="1dp" android:left="-1dp" android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/gray"/> <!-- Change to your desired stroke color and width -->
            <corners android:topRightRadius="8dp"
                 android:bottomRightRadius="8dp"/>
        </shape>
    </item>

</layer-list>
