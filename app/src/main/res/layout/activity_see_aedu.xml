<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SeeAEdu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/seeA_edu"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/curver"
            android:backgroundTint="@color/black"
            android:src="@drawable/seea_edu"

            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SeeAoneActivity"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#332B2B"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:id="@+id/SeeAone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="SeeA"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="italic"

                android:paddingTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:text="1NE"
                android:textColor="#FFCF00"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/SeeAone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/onehundradforthynine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="520dp"
                android:text="₹140"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/textView11"

                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/yeartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ year"
                android:paddingTop="20dp"

                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"




                app:layout_constraintStart_toEndOf="@+id/onehundradforthynine"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/seeAEdu"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            >

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#616060"
                >


                <TextView
                    android:id="@+id/SeeA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"

                    android:text="SeeA"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="italic"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:text="Edu."
                    android:textColor="#FFCF00"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/SeeA"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="80dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#214D97">

                <LinearLayout
                    android:id="@+id/recommended_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/search_link_tube" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/white"
                        android:text="Best for those who wants to provide SeeA Player in group , a institute , or want to add in any course
"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:id="@+id/monthlyBox"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_box_bg_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"

                    android:layout_marginTop="150dp"
                    android:layout_marginStart="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly\n₹19"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/monthly_select"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="5dp"
                        android:visibility="gone"
                        android:src="@drawable/complete_svgrepo_com"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quarterly_Box"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/square_box_bg_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintStart_toEndOf="@+id/monthlyBox"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Quarterly\n₹75"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/quarterly_select"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="5dp"
                        android:visibility="gone"
                        android:src="@drawable/complete_svgrepo_com"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/annual_Box"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/square_box_bg_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/quarterly_Box"

                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Annual\n₹149"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    <ImageView
                        android:id="@+id/annual_select"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="15dp"
                        android:visibility="gone"
                        android:src="@drawable/complete_svgrepo_com"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>

</LinearLayout>