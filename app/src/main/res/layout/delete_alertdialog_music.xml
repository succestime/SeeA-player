<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to delete this music?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginVertical="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_marginVertical="40sp"
        android:background="@color/light_black"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/videoImage"
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:layout_marginStart="10sp"
            android:background="#B8B8B8"
            android:src="@drawable/music_note_svgrepo_com"
            app:shapeAppearanceOverlay="@style/curved_image_delete"
            />



        <TextView
            android:id="@+id/videmusicNameDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="video title"
            android:gravity="center_vertical"

            android:layout_marginVertical="2dp"
            android:layout_marginStart="20sp"
            android:maxLines="2"
            android:textColor="@color/black"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/deleteText"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:text="Delete permanently"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:padding="16sp"
        android:background="@drawable/text_border"
        android:layout_margin="8sp"
        />

    <TextView
        android:id="@+id/cancelText"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16sp"
        android:background="@drawable/text_border_black"
        android:layout_margin="8sp"
        />

</LinearLayout>
