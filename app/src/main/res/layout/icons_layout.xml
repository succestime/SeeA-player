<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/playback_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/agdfdgdfgfrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_lock_open"
        app:layout_constraintBottom_toBottomOf="@+id/playback_icon"
        app:layout_constraintEnd_toEndOf="@+id/playback_icon"
        app:layout_constraintStart_toStartOf="@+id/playback_icon"
        app:layout_constraintTop_toTopOf="@+id/playback_icon">

    </ImageView>

    <TextView
        android:id="@+id/icon_title"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/playback_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Background Icon"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playback_icon" />




</androidx.constraintlayout.widget.ConstraintLayout>