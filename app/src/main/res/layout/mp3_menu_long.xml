<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/removeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10sp"
        app:drawableStartCompat="@drawable/outline_delete_24" />

    <TextView
        android:id="@+id/shareTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10sp"
        app:drawableStartCompat="@drawable/share_communication_arrow_svgrepo_com" />


    <TextView
        android:id="@+id/ringtoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set as Ringtone"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10sp"
        app:drawableStartCompat="@drawable/phone_call_ringing_svgrepo_com" />


</LinearLayout>
</androidx.cardview.widget.CardView>
