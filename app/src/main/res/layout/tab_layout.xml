<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="195dp"
    android:layout_height="260dp"
    android:orientation="vertical"
   android:backgroundTint="#3D2721"
    app:contentPadding="5dp"
    app:cardCornerRadius="10dp"
  android:layout_margin="15dp">

    <!-- Tab Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linearLayout21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D2721"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/websiteIcon"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginRight="4sp"
                android:src="@drawable/internat_browser_white"
               />

            <TextView
                android:id="@+id/tabName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="10 Manhwa That Are Perfect For A Relaxing Read"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/cancelBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/browser_clear"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/curver_tab_view"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout21">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tabViewImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/curver_tab_view"
            android:src="@drawable/tab_internat_browser_gray"

             />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
