<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/iconCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/iconWebsiteView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/pdf_image"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/selected_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/complete_svgrepo_select"
            android:visibility="gone"
            app:tint="#FFCF00" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconApkView"
        app:layout_constraintStart_toEndOf="@+id/iconCardView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleWebApkView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PDF Title"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/iconApkView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WebApkSizeView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="File Size"
            app:layout_constraintStart_toEndOf="@+id/iconWebsiteView"
            app:layout_constraintTop_toBottomOf="@id/titleWebApkView" />


    </LinearLayout>

    <!-- More options icon -->
    <ImageButton
        android:id="@+id/iconApkView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/icon_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
